<?xml version="1.0" ?>
<formas>
	<!-- o atributo "cheio" indica se o poligono eh preenchido ou nao -->
	<poligono cor="FF0000" cheio="verdadeiro">
		<!-- os pontos indicam os vertices do poligono. Sao ligados na ordem
		em que aparecem, com o ultimo ligando de volta no primeiro -->
		<ponto x="1.0" y="0.0" z="0.0"/>
		<ponto x="0.0" y="0.0" z="0.0"/>
		<ponto x="0.0" y="1.0" z="0.0"/>
		<ponto x="1.0" y="1.0" z="0.0"/>
		<ponto x="-2.0" y="1.0" z="0.0"/>
		<ponto x="3.0" y="1.0" z="0.0"/>
		<!-- <ponto> adicionais -->
	</poligono>
</formas>
